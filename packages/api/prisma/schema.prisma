generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String?   @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  sessions  Session[]
}

model Session {
  id         String   @id @default(cuid())
  sessionId  String   @unique
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])
  userEmail  String?
  userAgent  String?
  url        String?
  browser    String?  // Extracted from userAgent
  device     String?  // Extracted from userAgent (desktop, mobile, tablet)
  os         String?  // Operating system
  hasErrors  Boolean  @default(false)  // Flag for sessions with errors
  startedAt  DateTime @default(now())
  lastActive DateTime @default(now())
  eventCount Int      @default(0)
  events     Event[]

  @@index([sessionId])
  @@index([userId])
  @@index([startedAt])
  @@index([userEmail])
  @@index([browser])
  @@index([device])
  @@index([hasErrors])
  @@index([lastActive])
}

model Event {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [sessionId], onDelete: Cascade)
  type      String
  timestamp BigInt
  data      Json
  createdAt DateTime @default(now())

  @@index([sessionId])
  @@index([timestamp])
  @@index([type])
}

model ApiKey {
  id            String   @id @default(cuid())
  key           String   @unique
  name          String
  active        Boolean  @default(true)
  excludedPaths String[] @default([])  // Array of path patterns to exclude from tracking
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([key])
}
